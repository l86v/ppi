include ./estrutura.preferencias.pug
body
    include ./estrutura.menulateral.pug
    #corpoconteudo
        .cabecalho
            a(href="./pagina-inicial" class="logo")
                img(src=`${configuracoes.servidor.logo}`)
            form(action="/imoveis/api/buscar" method="post")
                input#termo(type="search" name="termo" placeholder="Buscar por imóveis. Ex: Cidade, condomínio, número de referência..." autocomplete="off" required)

        .imovel-cadastro
            form(action="/imoveis/api/cadastro" method="post")
                .zona
                    .lista
                        .titulo Finalidade:
                        .linha
                            .tipo Locação
                            .dado
                                input(type="radio" name="finalidade" value="locacao" required)
                        .linha
                            .tipo Venda
                            .dado
                                input(type="radio" name="finalidade" value="venda" required)
                        .linha
                            .tipo Venda/locação
                            .dado 
                                input(type="radio" name="finalidade" value="venda-locacao" required)
                .zona
                    .atributos
                        .atributo-titulo
                            .titulo Categoria:
                            select(name="categoria" required)
                                option(value="" selected) Selecione uma opção
                                option(value="residencial") Residencial
                                option(value="comercial") Comercial
                                option(value="industrial") Industrial
                        .atributo-titulo
                            .titulo Subcategoria:
                            select(name="subcategoria" required)
                                option(value="" selected) Selecione uma opção
                                option(value="apartamento") Apartamento
                                option(value="loft") Loft
                                option(value="chacara") Chácara
                                option(value="sitio") Sítio
                                option(value="galpao") Galpão
                                option(value="fazenda") Fazenda
                                option(value="imovel-praia") Casa de praia
                                option(value="imovel-condominio") Casa em condomínio
                                option(value="imovel-via-publica") Casa em via pública
                                option(value="bangalo") Bangalô
                                option(value="terreno") Terreno
                                option(value="rural") Rural
                        .atributo-titulo
                            .titulo Condomínio:
                            select(name="condominio" required)
                                option(value="" selected) Selecione uma opção
                                option(value="nao") Não
                                option(value="sim") Sim

                        .atributo-titulo
                            .titulo Andar:
                            input#andar(type="number" name="andar" min="0" max="100" value="0" autocomplete="off")

                .zona
                    .titulo Localização:
                    .atributos
                        .atributo-simples
                            input(type="text" name="cidade" placeholder="Cidade" required autocomplete="off")
                        .atributo-simples
                            input(type="text" name="bairro" placeholder="Bairro" required autocomplete="off")
                        .atributo-simples
                            input(type="text" name="rua" placeholder="Rua" required autocomplete="off")
                        .atributo-duplo
                            input.numero(type="tel" name="numero" placeholder="Número" required autocomplete="off")
                            input(type="text" name="complemento" placeholder="Complemento" autocomplete="off")
                        .atributo-simples
                            input.cep(type="tel" name="cep" placeholder="CEP" required autocomplete="off")

                .zona
                    .titulo Valores:
                    .atributos
                        .atributo-titulo
                            .titulo Preço de venda (com comissão)
                            input.preco-venda(type="tel" name="preco-venda" placeholder="Preço de venda" required autocomplete="off")
                        .atributo-titulo
                            .titulo Preço de locação
                            input.preco-locacao(type="tel" name="preco-locacao" placeholder="Preço de locação" required autocomplete="off")
                        .atributo-titulo
                            .titulo Valor de condomínio
                            input.valor-condominio(type="tel" name="valor-condominio" placeholder="Valor mensal de condomínio" required autocomplete="off")
                        .atributo-titulo
                            .titulo Condição de pagamento do IPTU
                            select(name="condicao-pagamento-iptu" required)
                                option(value="" selected) Selecione uma opção
                                option(value="mensal") Mensal
                                option(value="anual") Anual

                .zona
                    .titulo Documentos do imóvel:
                    .atributos
                        .atributo-duplo
                            .titulo Cartório
                            input(type="text" name="cartorio-cidade" placeholder="Selecione a cidade" required autocomplete="off")
                            input(type="text" name="cartorio-numero" placeholder="N. do cartório" required autocomplete="off")
                        .listacheia
                            .linha
                                .tipo IPTU
                                .dado
                                    input(type="radio" name="documento-cartorio" value="iptu" required)
                            .linha
                                .tipo Outros
                                .dado
                                    input(type="radio" name="documento-cartorio" value="outros" required)
                        .atributo-titulo
                            .titulo Número da matrícula
                            input(type="text" name="documento-numero-matricula" placeholder="Insira o número da matrícula" required autocomplete="off")
                        .atributo-titulo
                            .titulo Número do IPTU
                            input(type="text" name="documento-numero-iptu" placeholder="Insira o número do IPTU" required autocomplete="off")

                .zona
                    .titulo Medidas:
                    .atributos
                        .atributo-titulo
                            .titulo Área total
                            input.area-total(type="tel" name="area-total" placeholder="em m²" required autocomplete="off")
                        .atributo-titulo
                            .titulo Área útil
                            input.area-util(type="tel" name="area-util" placeholder="em m²" required autocomplete="off")
                        .atributo-titulo
                            .titulo Medida frente
                            input.medida-frente(type="tel" name="medida-frente" placeholder="em metros" required autocomplete="off")
                        .atributo-titulo
                            .titulo Medida lateral
                            input.medida-lateral(type="tel" name="medida-lateral" placeholder="em metros" required autocomplete="off")
                        .atributo-titulo
                            .titulo Medida fundos
                            input.medida-fundos(type="tel" name="medida-fundos" placeholder="em metros" required autocomplete="off")

                .zona
                    .titulo Características:
                    .atributos
                        .atributo-titulo
                            .titulo Dormitórios
                            input.dormitorios(type="tel" name="dormitorios" placeholder="Dormitórios" required autocomplete="off")
                        .atributo-titulo
                            .titulo Banheiros
                            input.banheiros(type="tel" name="banheiros" placeholder="Banheiros" required autocomplete="off")
                        .atributo-titulo
                            .titulo Suítes
                            input.suites(type="tel" name="suites" placeholder="Suítes" required autocomplete="off")
                        .atributo-titulo
                            .titulo Vagas na garagem
                            //- input.garagem(type="tel" name="garagem" placeholder="Vagas na garagem" required autocomplete="off")
                            input.garagem(type="number" name="garagem" min="0" max="100" value="1" placeholder="Vagas na garagem" autocomplete="off")


                        .lista
                            .titulo Vaga
                            .linha
                                .tipo Fixa
                                .dado
                                    input(type="radio" name="tipovagas" value="fixa" required)
                            .linha
                                .tipo Livre
                                .dado
                                    input(type="radio" name="tipovagas" value="livre" required)
                            
                .zona
                    .titulo Descrição:
                        .atributos
                            .atributo
                                textarea(name="descricao")

                input(type="submit" value="enviar")

